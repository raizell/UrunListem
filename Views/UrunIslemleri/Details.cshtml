@model UrunListem.Models.Urun

@{
    ViewData["Title"] = "Detaylar";
}

<h1>Detaylar</h1>

<div>
    
    <hr />
    
        <dl class="row">
    <div class="col-4">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Adi)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Adi)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Tur)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Tur)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Renk)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Renk)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Aciklama)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Aciklama)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Fiyat)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fiyat)
        </dd>
    </div>
    <div class="col-6 p-3 mb-2 bg-gradient-warning text-dark">
        <h4>Galeri</h4>
        @foreach (var item in Model.Resimler)
        {
            <img src="\Resimler\@item.ResimAdi" style="max-height: 150px;" class="img-thumbnail"/>
        }
    </div>
    </dl>
    
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Düzenle</a> |
    <a asp-action="Index">Ürün Listesine Dön</a>
</div>
